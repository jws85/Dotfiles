# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4
#set $font "monospace"
set $font Pragmata Pro
set $fontSize 10
set $wall ~/.wallpaper

# Workspace names
set $webWksp "1:"
set $ttyWksp "2:"
set $codeWksp "3:"

# Font for window titles
font pango:$font $fontSize

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec alacritty

# kill focused window
bindsym $mod+Delete kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# resize focused window
bindsym $mod+Ctrl+h resize shrink width 10px or 5ppt
bindsym $mod+Ctrl+j resize grow height 10px or 5ppt
bindsym $mod+Ctrl+k resize shrink height 10px or 5ppt
bindsym $mod+Ctrl+l resize grow width 10px or 5ppt

## enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, split)
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+minus split v
bindsym $mod+bar split h
bindsym $mod+backslash split h

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# change focus between tiling / floating windows
bindsym $mod+o focus mode_toggle

# focus the parent container
bindsym $mod+Shift+comma focus parent
bindsym $mod+Shift+period focus child

# switch to workspace
bindsym $mod+1 workspace $webWksp
bindsym $mod+2 workspace $ttyWksp
bindsym $mod+3 workspace $codeWksp
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
bindsym $mod+Tab workspace back_and_forth
bindsym $mod+Left workspace prev
bindsym $mod+Right workspace next
bindsym $mod+n workspace next_on_output
bindsym $mod+p workspace prev_on_output

# read 1 character and mark the current window with this character
bindsym $mod+period exec i3-input -f "pango:$font $fontSize" -F 'mark %s' -l 1 -P 'Mark: '

# read 1 character and go to the window with the character
bindsym $mod+comma exec i3-input -f "pango:$font $fontSize" -F '[con_mark="%s"] focus' -l 1 -P 'Goto: '

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $webWksp
bindsym $mod+Shift+2 move container to workspace $ttyWksp
bindsym $mod+Shift+3 move container to workspace $codeWksp
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10
bindsym $mod+Shift+Tab move container to workspace back_and_forth
bindsym $mod+Shift+Left move container to workspace prev_on_output
bindsym $mod+Shift+Right move container to workspace next_on_output

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+Escape exec "i3-nagbar -f 'pango:$font $fontSize' -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
# lock the screen
bindsym $mod+Escape exec "i3lock -ti ~/.config/i3/tiling.png -c 00547f"
# launch rofi
bindsym $mod+space exec "rofi -show run -display-run 'Run>>> '"
bindsym $mod+slash exec "rofi -show window -display-window 'Windows>>> '"
# printscreen
bindsym Print exec "flameshot gui"

# change sound/media settings
bindsym XF86AudioPlay exec "mpc toggle"
bindsym XF86AudioStop exec "mpc stop"
bindsym XF86AudioPrev exec "mpc prev"
bindsym XF86AudioNext exec "mpc next"
bindsym XF86AudioMute exec "pactl set-sink-mute @DEFAULT_SINK@ toggle"
bindsym XF86AudioLowerVolume exec "pactl set-sink-volume @DEFAULT_SINK@ -5%"
bindsym XF86AudioRaiseVolume exec "pactl set-sink-volume @DEFAULT_SINK@ +5%"

# Different modes
# Exiting any mode can be done with: Return, Escape, Ctrl+g
# That last one is the effect of permanent Emacs dain bramage ^_^

# change sound/media settings... for keyboards that don't have media keys
# lookin' atcha, Thinkpad X260 >.<
set $mode_sound "SOUND:  play/pause •  stop •  prev •  next"
mode $mode_sound {
	bindsym Up exec "mpc stop"
	bindsym Down exec "mpc toggle"
	bindsym Left exec "mpc prev"
	bindsym Right exec "mpc next"

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Ctrl+g mode "default"
}
bindsym $mod+z mode $mode_sound

# a "launcher" mode to kick off commonly used utilities
set $mode_launcher "LAUNCH: [a]genda [c]alc [e]macs [f]man [k]eepass [m]usic [n]otes [o]rg-capture [w]eb"
mode $mode_launcher {
	bindsym a exec "em -l '(jws/org-agenda-single-window)'"
	bindsym c exec "em -l '(full-calc)'"
	bindsym e exec "em"
	bindsym f exec "fman"
	bindsym k exec "keepassx"
	bindsym m exec "cantata"
	bindsym n exec "em -l '(deft)'"
	bindsym o exec "em -l '(jws/org-capture-single-window)'"
	bindsym w exec "sensible-browser"

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Ctrl+g mode "default"
}
bindsym $mod+semicolon mode $mode_launcher

# move window, mostly intended for floating windows
set $mode_move "MOVE: h/ left • j/ down • k/ up • l/ right"
mode $mode_move {
        bindsym h move left
        bindsym j move down
        bindsym k move up
        bindsym l move right

        bindsym Shift+h move left 50 px
        bindsym Shift+j move down 50 px
        bindsym Shift+k move up 50 px
        bindsym Shift+l move right 50 px

        bindsym Left move left
        bindsym Down move down
        bindsym Up move up
        bindsym Right move right

	bindsym 0 move position 0 0
	bindsym c move position center

	bindsym r mode $mode_resize

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Ctrl+g mode "default"
}
bindsym $mod+m mode $mode_move

# resize window, again, mostly intended for floating windows
set $mode_resize "RESIZE: h/ left • j/ down • k/ up • l/ right"
mode $mode_resize {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

	bindsym m mode $mode_move

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Ctrl+g mode "default"
}
bindsym $mod+r mode $mode_resize

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	colors {
        	background #0f161e
        }
	position top
        status_command i3blocks
        strip_workspace_numbers yes
        separator_symbol " • "
        tray_output primary
        font pango:$font,FontAwesome $fontSize
}

# remove window titlebars
for_window [class="^.*"] border pixel 2
new_window 1pixel
## future window border settings; not compatible with i3 on Ubuntu 18.04
#default_border pixel 2
#default_floating_border normal

# force settings on specific windows
for_window [class="Keepassx"] floating enable
for_window [class="em"] floating enable

# autostart applications
exec feh --bg-scale $wall
