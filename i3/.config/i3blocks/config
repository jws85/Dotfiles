# run 'curl wttr.in?format=%c+%t > /tmp/wttr.in' every so often via cron
# (don't go crazy, be friendly to their rate limits!  I do every 15 minutes)
[weather]
command=cat ~/.wttr.in 2>/dev/null
interval=60

[mpd]
command=~/.config/i3blocks/blocks/mpd
interval=2

[pulseaudio]
command=~/.config/i3blocks/blocks/pulseaudio
interval=1

[cpu_usage]
command=~/.config/i3blocks/blocks/cpu_usage
interval=2

[disk_root]
command=df -h / | awk 'FNR==2{print $5}'
interval=2
label=

# On my X260, the battery is BAT1, not BAT0
[battery]
command=~/.config/i3blocks/blocks/battery
interval=10
instance=1

[date]
command=date "+%m-%d %H:%M"
interval=1
label=
